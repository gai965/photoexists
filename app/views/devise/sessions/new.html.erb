<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
<div class ='form_wrap_session'>
  <div class='form-header'>
    <h3 class='form-header-text'>
      ログイン情報入力
    </h3>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"登録したメールアドレスを入力してください", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"登録したパスワードを入力してください" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "ログイン" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>