<%= render "shared/header" %>

<div class='main'>
  <%= image_tag 'worldmap.jpg', class: 'top-picture' %>
  
  <div class='title-contents'>
    <div class='title-img'>
      <%= image_tag 'title.png' ,class: 'title-icon'%>
    </div>
    <div class='anime-content'>
      <%= image_tag 'photo-icon.png' ,class: 'sample-icon'%>
      <div class='arrow-anime'>
        <%= image_tag 'arrow-icon.png' ,class: 'arrow-icon', id: 'arrow1'%>
        <%= image_tag 'arrow-icon-red.png' ,class: 'arrow-icon', id: 'arrow-red1' %>
        <%= image_tag 'arrow-icon.png' ,class: 'arrow-icon', id: 'arrow2'%>
        <%= image_tag 'arrow-icon-red.png' ,class: 'arrow-icon', id: 'arrow-red2' %>
        <%= image_tag 'arrow-icon.png' ,class: 'arrow-icon', id: 'arrow3'%>
        <%= image_tag 'arrow-icon-red.png' ,class: 'arrow-icon', id: 'arrow-red3' %>
      </div>
      <%= image_tag 'gps-icon.png' ,class: 'gps-icon'%>
    </div>
  </div>
  
  <div class='photo-contents'>
    <h2 class='photo-contents-title'>投稿写真</h2>
    <ul class='photo-lists'>
      <%= render partial: "photo", collection: @photos%>
    </ul>
    <div class='photo-page'>
      <%= paginate @photos %>
    </div>
  </div>
</div>

<%= link_to(new_photo_path, class: 'photo-post-btn') do %>
  <span class='post-btn-text'>投稿する</span>
  <%= image_tag 'post-btn.png' , size: '185x50' ,class: "post-btn-icon" %>
<% end %>